using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ISD_Inheritance_1
{
    class Printer

    {
        protected ConsoleColor color;
        public Printer(ConsoleColor color)
        {
            this.color = color;
        }
        public void Print(string value)
        {
            Console.ForegroundColor = color;
            Console.WriteLine(value);

        }
    }
    class RedPrinter : Printer
    {
        public RedPrinter():base(ConsoleColor.Red)
        {

        }
    }
    class GreenPrinter : Printer
    {
        public GreenPrinter() : base(ConsoleColor.Green)
        {

        }
    }
    class YellowPrinter : Printer
    {
        public YellowPrinter() : base(ConsoleColor.Yellow)
        {

        }
    }
    class CyanPrinter : Printer
    {
        public CyanPrinter() : base(ConsoleColor.Cyan)
        {

        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            RedPrinter print = new RedPrinter();
            Printer up = print as Printer;
            up.Print("This string");
            GreenPrinter print1 = new GreenPrinter();
            Printer up1 = print1 as Printer;
            up1.Print("This string");
            YellowPrinter print2 = new YellowPrinter();
            Printer up2 = print2 as Printer;
            up2.Print("This string");
            CyanPrinter print3 = new CyanPrinter();
            Printer up3 = print3 as Printer;
            up3.Print("This string");
            Console.ReadKey();
        }
        
    }
}
